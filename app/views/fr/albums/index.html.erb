
<% @albums.each do |album| %>
<%= album.titre %>
<% unless album.pictures.nil? %>
<% album.pictures.each do |photo| %>
  <%= cl_image_tag photo.path %>
<% end %>
<% end %>
<% end %>


<% if current_user.admin == true %>
<%= simple_form_for @album do |f| %>
  <%= f.collection_select :picture_id, Picture.all, :id, :titre %>
  <%= f.collection_select :album_id, Album.all, :id, :titre %>

  <%= f.submit %>
<% end %>
<% end %>
